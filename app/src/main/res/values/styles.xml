<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<!--Logo-->
<style name="LogoStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:maxWidth">190dp</item>
    <item name="android:adjustViewBounds">true</item>
</style>
<!--Title text-->
<style name="LogoText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/titleFontSize</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:color">@color/Black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/White</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:alpha">0.9</item>
</style>

<!-- General Sizing and Positioning -->

<!--HorMatchParent_VerMatchParent-->
<style name="HorMatchParent_VerMatchParent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginBottom">20dp</item>
</style>
    <!-- General Image Style -->
        <style name="GeneralImage" parent="HorMatchParent_VerMatchParent">
            <item name="android:adjustViewBounds">true</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">0dp</item>
        </style>
    <!--bckbround image -->
        <style name="BckgImg" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_marginBottom">0dp</item>
            <item name="android:scaleType">centerCrop</item>
            <item name="android:alpha">0.7</item>
        </style>
    <!-- HScroll Images -->
        <style name="HScrollImage" parent="HorMatchParent_VerMatchParent">
            <item name="android:adjustViewBounds">true</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_marginRight">8dp</item>
            <item name="android:layout_marginBottom">0dp</item>
        </style>
    <!--Hor100%_VertAuto-->
        <style name="HorMatchParent_VertWrap" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>
        <!--Containers-->
            <style name="ContainerBox" parent="HorMatchParent_VertWrap">
                <item name="android:padding">10dp</item>
                <item name="android:background">@color/Black</item>
            </style>
    <!--Global Scroll-->
        <style name="GlobalScroll" parent="HorMatchParent_VertWrap">
            <item name="android:layout_marginBottom">0dp</item>
            <item name="android:paddingRight">12dp</item>
            <item name="android:paddingLeft">12dp</item>
            <item name="android:scrollbars">none</item>
        </style>
    <!--tableBtns image style-->
        <style name="btnInTable" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:padding">@dimen/textHorPadding</item>
            <item name="android:layout_margin">0dp</item>
        </style>

<!--tableLines-->
<style name="TableRow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:layout_marginTop">6dp</item>
</style>

<!--text styles-->
<style name="BasicTextViews">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:color">@color/White</item>
    <item name="android:paddingRight">@dimen/textHorPadding</item>
    <item name="android:paddingLeft">@dimen/textHorPadding</item>/>
</style>

<!--SubTitle text-->
    <style name="SubTitleText" parent="BasicTextViews">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
<!--Sticker-->
    <style name="Sticker" parent="BasicTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:background">@color/White</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
<!--BoxTitle-->
    <style name="BoxTitle" parent="BasicTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
    </style>
<!--Text inside table-->
    <style name="textInTable" parent="BasicTextViews">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/LightBlue</item>
    </style>
    <!--Second column in table-->
        <style name="SecondColumn" parent="textInTable">
    <item name="android:textSize">12sp</item>
    <item name="android:layout_weight">4</item>
</style>

<!--Social Icons: Table-->
<style name="SocialIconsTable">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">60dp</item>
    <item name="android:orientation">horizontal</item>
</style>
<!--Social Icons-->
<style name="SocialIcons">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:padding">12dp</item>
    <item name="android:onClick">openBrowser</item>
</style>
</resources>
