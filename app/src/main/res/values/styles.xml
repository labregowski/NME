<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<!--Logo-->
<style name="LogoStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/LogoBottomMargin</item>
    <item name="android:maxWidth">@dimen/LogoMaxWidth</item>
    <item name="android:adjustViewBounds">true</item>
</style>
<!--Title text-->
<style name="LogoText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/titleFontSize</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:color">@color/Black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/White</item>
    <item name="android:layout_marginBottom">@dimen/InnerElementsGeneralBottomMargin</item>
    <item name="android:layout_marginLeft">@dimen/LogoLeftMargin</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:alpha">0.9</item>
</style>

<!-- General Sizing and Positioning -->

<!--HorMatchParent_VerMatchParent-->
<style name="HorMatchParent_VerMatchParent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginBottom">@dimen/DefaultBottomMargin</item>
</style>
    <!-- General Image Style -->
        <style name="GeneralImage" parent="HorMatchParent_VerMatchParent">
            <item name="android:adjustViewBounds">true</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
        </style>
    <!--bckbround image -->
        <style name="BckgImg" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
            <item name="android:scaleType">centerCrop</item>
            <item name="android:alpha">0.7</item>
        </style>
    <!-- HScroll Images -->
        <style name="HScrollImage" parent="HorMatchParent_VerMatchParent">
            <item name="android:adjustViewBounds">true</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_marginRight">@dimen/HorScrollPhotoRRightMargin</item>
            <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
        </style>
    <!--Hor100%_VertAuto-->
        <style name="HorMatchParent_VertWrap" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>
        <!--Containers-->
            <style name="ContainerBox" parent="HorMatchParent_VertWrap">
                <item name="android:padding">@dimen/InnerElementsGeneralPadding</item>
                <item name="android:background">@color/Black</item>
            </style>
    <!--Global Scroll-->
        <style name="GlobalScroll" parent="HorMatchParent_VertWrap">
            <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
            <item name="android:paddingRight">@dimen/GlobalScrolSidePadding</item>
            <item name="android:paddingLeft">@dimen/GlobalScrolSidePadding</item>
            <item name="android:scrollbars">none</item>
        </style>
    <!--tableBtns image style-->
        <style name="btnInTable" parent="HorMatchParent_VerMatchParent">
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_width">@dimen/Width0_toUseWeight</item>
            <item name="android:layout_weight">1</item>
            <item name="android:padding">@dimen/textHorPadding</item>
            <item name="android:layout_margin">@dimen/NoMargin</item>
        </style>

<!--tableLines-->
<style name="TableRow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/tblRowHeight</item>
    <item name="android:layout_marginTop">@dimen/tblRowTopMargin</item>
</style>

<!--text styles-->
<style name="BasicTextViews">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:color">@color/White</item>
    <item name="android:paddingRight">@dimen/textHorPadding</item>
    <item name="android:paddingLeft">@dimen/textHorPadding</item>/>
</style>

<!--SubTitle text-->
    <style name="SubTitleText" parent="BasicTextViews">
        <item name="android:textSize">@dimen/BasicTexFontSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginBottom">@dimen/InnerElementsGeneralBottomMargin</item>
    </style>
<!--Sticker-->
    <style name="Sticker" parent="BasicTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:background">@color/White</item>
        <item name="android:textSize">@dimen/StickerFontSize</item>
        <item name="android:padding">@dimen/InnerElementsGeneralPadding</item>
        <item name="android:textAllCaps">true</item>
    </style>
<!--BoxTitle-->
    <style name="BoxTitle" parent="BasicTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/BoxTitleFontSize</item>
        <item name="android:padding">@dimen/InnerElementsGeneralPadding</item>
    </style>
<!--Text inside table-->
    <style name="textInTable" parent="BasicTextViews">
        <item name="android:layout_width">@dimen/Width0_toUseWeight</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/LightBlue</item>
    </style>
    <!--Second column in table-->
        <style name="SecondColumn" parent="textInTable">
            <item name="android:textSize">@dimen/TableSecondColumnFontSize</item>
            <item name="android:layout_weight">4</item>
        </style>

<!--Social Icons: Table-->
<style name="SocialIconsTable">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/SocialIconsTableHeight</item>
    <item name="android:orientation">horizontal</item>
</style>
<!--Social Icons-->
<style name="SocialIcons">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/Width0_toUseWeight</item>
    <item name="android:layout_weight">1</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:padding">@dimen/SocialIconsPadding</item>
    <item name="android:onClick">openBrowser</item>
</style>
</resources>
